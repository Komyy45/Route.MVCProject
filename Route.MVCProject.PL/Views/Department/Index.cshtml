@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<section class="d-flex justify-content-between align-items-center my-5">
    <h1><i class="fa-regular fa-building me-2"></i> Departments</h1>

    <p>
        <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
    </p>

</section>
@if(Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreationDate)
                </th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Department" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-eye me-2"></i>Details</a>
                    </td>                    
                    <td>
                        <a class="btn btn-info" asp-controller="Department" asp-action="Update" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square me-2"></i>Update</a>
                    </td>                  
                    <td>
                        <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-regular fa-trash-can me-2"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <section class="alert alert-info fs-5">
        <i class="fa-solid fa-circle-exclamation me-2"></i> There are no Departments
    </section>
}
